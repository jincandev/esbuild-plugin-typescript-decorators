{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": false,
        "lib": ["DOM", "esnext"],
        "baseUrl": "./"
    },
    "include": [
      "src/**/*.ts"
    ]
}